#:import Factory kivy.factory.Factory

<sp@SpinnerOption>:
	color: 1,0,0,1
    font_name: 'NotoSansMonoCJKtc-Regular.otf'
	background_color: 0.4, 0.4, 0, 1

<Calendar>:
    BoxLayout:
        orientation: "vertical"
        padding : 30, 30
        # size_hint_y: .5

        # Button:
        #     id: startDate
        #     hint_text: 'Start Date'
        #     write_tab: False
        #     on_focus: root.setDate()
        Button:
            id:startDate
            on_release: root.show_calendar()
            text: '選擇起始日'
            font_name: 'NotoSansMonoCJKtc-Regular.otf'
            size_hint: 1, .3
        
                # y: self.parent.y
                # center_x: self.parent.center_x
                # allow_stretch: True
                # source: 'cross.png'

        Spinner:
            id: money
            font_name: 'NotoSansMonoCJKtc-Regular.otf'
            text: '選擇單程票價'
            values: root.money
            sync_height: True
            # on_text: root.select(money)
            option_cls: Factory.sp
            size_hint: 1, .2
        Spinner:
            id: holiday
            font_name: 'NotoSansMonoCJKtc-Regular.otf'
            text: '自訂休假天數'
            values: root.holiday
            sync_height: True
            # on_text: root.select(holiday)
            option_cls: Factory.sp
            size_hint: 1, .2
        Button:
            id:run
            on_press: root.calc()
            text:'執行'
            font_name: 'NotoSansMonoCJKtc-Regular.otf'
            size_hint: 1, .2
        TextInput:
            id: ti
            font_name: 'NotoSansMonoCJKtc-Regular.otf'
            text:'執行完畢後將顯示建議起始日於此'
            size_hint: 1, 1
            halign: 'center'
            # padding_y: [self.height / 2.0 - (self.line_height / 1.0) * len(self._lines), 0]
